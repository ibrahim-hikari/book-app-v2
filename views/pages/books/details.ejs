<!DOCTYPE html>
<html lang="en">

<head>
    <title>Document</title>
    <link rel="stylesheet" href="../css/details.css">
</head>

<body>
    <main>
        <% book.forEach(book => { %>
        <li>
            <div class="card">
                <div><img src=<%= book.image_url%>></div>
                <div class="title"><%= book.title%></div>
                <div class="author"><em><%= book.author%></em></div>
                <div class="description">
                    <p><%= book.description%></p>
                </div>
                <div class="isbn"><%= book.isbn%></div>
                <div class="bookshelf"><%= book.bookshelf%></div>
            </div>
            <form action="/update" method="post">
                <input type="hidden" name="id" value="<%= book.id%>">
                <input type="hidden" name="image_url" value="<%= book.image_url%>">
                <input type="hidden" name="title" value="<%= book.title%>">
                <input type="hidden" name="author" value="<%= book.author%>">
                <input type="hidden" name="description" value="<%= book.description%>">
                <input type="hidden" name="isbn" value="<%= book.isbn%>">
                <input type="hidden" name="bookshelf" value="<%= book.bookshelf%>">
                <button type="submit" class="update">Update</button>
            </form>
            <form action="/delete/<%= book.id%>" method="post">
                <input type="hidden" name="_method" value="delete">
                <button type="submit" class="delete">Delete</button>
            </form>
        </li>
        <% }) %>
    </main>
</body>

</html>